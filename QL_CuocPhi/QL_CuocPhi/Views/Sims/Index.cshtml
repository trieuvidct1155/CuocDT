@model IEnumerable<QL_CuocPhi.Models.Sim>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách số điện thoại</h2>

<p>
    @using (Html.BeginForm())
    {
        <span>
            Nhập tìm số điện thoại: @Html.TextBox("SearchKey")
            <input type="submit" value="Tìm" />
            <a href="/Sims/Index" style=""><input type="button" name="refesh" value="Tải lại" style="color: green" /></a>
        </span>
    }
</p>

<table class="table">
    <tr>
        <th>
            Số điện thoại
        </th>
        <th>
            tình trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoSim)
            </td>

            @if (item.Status == true)
            {
                <td>
                    Hoạt động
                </td>
            }
            else
            {
                <td>
                    Hoạt động
                </td>
            }

            <td>
                @Html.ActionLink("Chi Tiết", "ChiTiet", new { id = item.SoSim }) |
                @Html.ActionLink("Cước phí", "CuocPhi", new { id = item.SoSim }) 
            </td>
        </tr>
    }

</table>
